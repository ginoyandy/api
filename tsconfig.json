{
    "compilerOptions": {
       "outDir": "./dist",
       "rootDir": "./",
       "module": "commonjs",
       "noImplicitAny": true,
       "allowJs": true,
       "esModuleInterop": true,
       "target": "es5",
       "lib": [
            "es6",          
            "es2016",
            "dom"
         ],
       "sourceMap": true,
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "typeRoots" : ["./node_modules/@types", "./typings"],
       "downlevelIteration": true,
       "strictNullChecks": true,
       "skipLibCheck": true,
    }
 }
 